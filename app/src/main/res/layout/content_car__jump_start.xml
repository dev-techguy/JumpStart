<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/cartwo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tecksolke.jumpstart.Car_JumpStart"
    tools:showIn="@layout/activity_car__jump_start">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#87000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="180dp"
                android:textColorHint="@color/colormine">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/carfaults"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:hint="Write Car Fault"
                    android:textAlignment="center"
                    android:textColor="@color/colormine" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/bcarjumpstart"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark"
                android:text="jumpstart"
                android:textColor="@color/colormine"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Car_Microphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="200dp"
        android:background="@color/colormine"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_mic" />

