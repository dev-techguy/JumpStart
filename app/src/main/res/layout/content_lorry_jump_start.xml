<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/jumpstart"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tecksolke.jumpstart.Lorry_JumpStart"
    tools:showIn="@layout/activity_lorry_jump_start">


    <android.support.design.widget.TabLayout
        android:id="@+id/lorry_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colormine"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colormine" />

    <android.support.v4.view.ViewPager
        android:id="@+id/lorry_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lorry_tabs" />

</RelativeLayout>
